---
import Social from './Social.astro';

const socialInfo = [
  { platform: 'twitter', username: 'astrodotbuild' },
  { platform: 'github', username: 'withastro' },
  { platform: 'youtube', username: 'astrodotbuild' },
];
---
<style>
  footer {
    display: flex;
    gap: 1rem;
    margin-top: 2rem;
  }
</style>
<footer>
  {
    socialInfo.map(({ platform, username }) => (
      <Social platform={platform} username={username} />
    ))
  }
</footer>